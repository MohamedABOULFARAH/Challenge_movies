<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_splash_scene">


    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sp_home"
        app:tint="@color/AvitoGreen"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="273dp" />

    <ImageView
        android:id="@+id/money_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sp_money"
        app:tint="@color/AvitoRed"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="251dp" />

    <ImageView
        android:id="@+id/security_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sp_security"
        app:tint="@color/AvitoBlue"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="140dp" />

    <ImageView
        android:id="@+id/business_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sp_business"
        app:tint="@color/AvitoGreen"
        tools:layout_editor_absoluteX="329dp"
        tools:layout_editor_absoluteY="367dp" />

    <ImageView
        android:id="@+id/graph_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sp_graph"
        app:tint="@color/AvitoPurple"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="167dp" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sp_voiture"
        app:tint="@color/AvitoBlue"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="44dp" />

    <TextView
        android:id="@+id/logo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Avito"
        android:textColor="@color/AvitoRed"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="325dp" />

</androidx.constraintlayout.motion.widget.MotionLayout>